{
    "restartable": "rs"
    , "verbose": false
	, "ignore": [
        ".git"
        , "node_modules/**/node_modules"
    ]
    , "delay" : 3
    , "execMap" : {
        "_ts" : "NODE_OPTIONS='--loader ts-node/esm' ts-node -r tsconfig-paths/register",
        "ts" : "node -r tsconfig-paths/register --experimental-loader=ts-node/esm --es-module-specifier-resolution=node"
    }
	, "watch": [
		"src/**/*.ts"
	]
    , "ext": "ts, json"
}